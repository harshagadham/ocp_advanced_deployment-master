{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pv{{ item }}"
  },
  "spec": {
    "capacity": {
        "storage": "10Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/srv/nfs/user-vols/pv{{ item }}",
        "server": "support1.{{ guid_val.stdout }}.internal"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}